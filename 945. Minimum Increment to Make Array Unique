Approach : sorting + greedy

Time complexity : O(nlogn)
Space complexity : O(1)

class Solution {
    public int minIncrementForUnique(int[] nums) {
        Arrays.sort(nums);
        int moves = 0;

        for(int i=1;i<nums.length;i++){
            if(nums[i] <= nums[i-1]){
                moves += (nums[i-1] - nums[i] +1);
                nums[i] = nums[i-1]+1;
            }
        }
        return moves;
    }
}
